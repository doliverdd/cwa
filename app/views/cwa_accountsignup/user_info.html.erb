<h2>My Access Information</h2>
<center>

<div style="width:800px">
<div class="box">
   <center>
   <h3>Basic Information</h3>
   <div align="left" style="width:200px">
     <p>Name: <b><%= @cwa_as.givenname %> <%= @cwa_as.sn %></b></p>
     <p>UID Number: <b><%= @cwa_as.namsid %></b></p>
     <p>Username: <b><%= @cwa_as.uid %></b></p>
     <p>Home directory: <b><%= @cwa_as.homedirectory %></b></p>
     <p>Affiliation: <b><%= @cwa_as.affiliation %></b></p>
     <p>Campus: <b><%= @cwa_as.campus %></b></p>
     <p>College: <b><%= @cwa_as.college %></b></p>
   </div>
   </center>
</div>
<div class="box">
  <center>
  <h3>Advanced Options</h3>
  <p><b>Please only change these options if you know what you are doing!</b></p>
  <div align="left" style="width:200px">
    <%= form_tag :action => :user_shell, :project_id => params[:project_id] do %>
      <% shell = @cwa_as.loginshell %>
      <% shell_id = @cwa_as.shells[shell] %>
      <p>Shell: <%= select_tag 'loginshell', options_for_select(@cwa_as.shells, :selected => shell_id) %> </p>
  </div>
      <%= submit_tag "Update Account Information", :disable_with => "Please wait..." %>
    <% end %>
</div>

<% if @cwa_as.uid != "admin" %>

<div class="box">
<h3>Disable My System Access</h3>
  <%= form_tag :action => :delete, :project_id => params[:project_id] do %>
  <p>
    <%= @cwa_as.delete_saa %>
  </p>
  <p>
    <%= submit_tag "Deactivate System Access", :disable_with => "Please wait..." %>
  </p>
  <% end %>
</div>

<% end %>
</div>
</center>
